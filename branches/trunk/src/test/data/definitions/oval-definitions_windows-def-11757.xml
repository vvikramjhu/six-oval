  <objects>
    <registry_object id="oval:org.mitre.oval:obj:15257" version="1" comment="The registry key holds the version of Google Chrome" xmlns="http://oval.mitre.org/XMLSchema/oval-definitions-5#windows">
      <hive>HKEY_USERS</hive>
      <key operation="pattern match">^S-.*\\Software\\Microsoft\\Windows\\CurrentVersion\\Uninstall\\Google Chrome$</key>
      <name>Version</name>
    </registry_object>

    <textfilecontent54_object id="oval:org.mitre.oval:obj:15567" version="1" comment="Object to check content of Google Chrome Preferences file" xmlns="http://oval.mitre.org/XMLSchema/oval-definitions-5#independent">
      <behaviors multiline="true"/>
      <path var_ref="oval:org.mitre.oval:var:1173" var_check="all"/>
      <filename>Preferences</filename>
      <pattern operation="pattern match">^\s*"name": "InvisibleHand"[^}]+}[^p]+path": "lghjfnfolmcikomdjmoiemllfnlmmoko\\[^s]+state": [01]$</pattern>
      <instance datatype="int">1</instance>
    </textfilecontent54_object>

    <registry_object id="oval:org.mitre.oval:obj:15382" version="1" comment="The registry key to check if Google Chrome is installed" xmlns="http://oval.mitre.org/XMLSchema/oval-definitions-5#windows">
