<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:mvc="http://www.springframework.org/schema/mvc" 
    xsi:schemaLocation="
      http://www.springframework.org/schema/beans 
      http://www.springframework.org/schema/beans/spring-beans.xsd
      http://www.springframework.org/schema/context 
      http://www.springframework.org/schema/context/spring-context.xsd
      http://www.springframework.org/schema/util 
      http://www.springframework.org/schema/util/spring-util-3.0.xsd
      http://www.springframework.org/schema/mvc
      http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">


    <import resource="six-oval_context-basic.xml"/>



    <!-- ************************************************************** -->
    <!-- *  Repository                                                * -->
    <!-- ************************************************************** -->

    <bean id="mongo" 
        class="com.mongodb.Mongo">
        <constructor-arg type="java.lang.String" value="${six.oval.repository.database.host}"/>
        <constructor-arg type="int" value="${six.oval.repository.database.port}"/>
    </bean> 


    <bean id="morphia" 
        class="jp.go.aist.six.oval.core.repository.morphia.MorphiaFactory" 
        factory-method="create"> 
        <constructor-arg>
            <set><!-- classes to map -->
                <!-- value>#{ T(jp.go.aist.six.oval.model.definitions.DefinitionType) }</value -->
            </set>
        </constructor-arg>
        <constructor-arg>
            <set><!-- converters -->
                <value>#{ T(jp.go.aist.six.oval.core.repository.morphia.OvalConverter) }</value>
            </set>
        </constructor-arg>
    </bean>


    <bean id="morphiaDatastore" 
        factory-bean="morphia" 
        factory-method="createDatastore"> 
        <constructor-arg ref="mongo"/> 
        <constructor-arg value="${six.oval.repository.database.name}"/>     <!-- String: database name -->
        <constructor-arg value="${six.oval.repository.database.username}"/> <!-- String: user name -->
        <constructor-arg value="${six.oval.repository.database.password}"/> <!-- String: user password -->
    </bean>


    <bean id="ovalDefinitionsDAO" 
        class="jp.go.aist.six.oval.core.repository.morphia.OvalDefinitionsDAO">
        <constructor-arg ref="morphiaDatastore"/> 
    </bean> 

    <bean id="definitionDAO" 
        class="jp.go.aist.six.oval.core.repository.morphia.DefinitionDAO">
        <constructor-arg ref="morphiaDatastore"/> 
    </bean> 

    <bean id="testDAO" 
        class="jp.go.aist.six.oval.core.repository.morphia.TestDAO">
        <constructor-arg ref="morphiaDatastore"/> 
    </bean> 

    <bean id="systemObjectDAO" 
        class="jp.go.aist.six.oval.core.repository.morphia.SystemObjectDAO">
        <constructor-arg ref="morphiaDatastore"/> 
    </bean> 

    <bean id="stateDAO" 
        class="jp.go.aist.six.oval.core.repository.morphia.StateDAO">
        <constructor-arg ref="morphiaDatastore"/> 
    </bean> 

    <bean id="variableDAO" 
        class="jp.go.aist.six.oval.core.repository.morphia.VariableDAO">
        <constructor-arg ref="morphiaDatastore"/> 
    </bean> 


    <bean id="ovalSystemCharacteristicsDAO" 
        class="jp.go.aist.six.oval.core.repository.morphia.OvalSystemCharacteristicsDAO">
        <constructor-arg ref="morphiaDatastore"/> 
    </bean> 

    <bean id="ovalResultsDAO" 
        class="jp.go.aist.six.oval.core.repository.morphia.OvalResultsDAO">
        <constructor-arg ref="morphiaDatastore"/> 
    </bean> 

    <bean id="definitionsElementAssocDAO" 
        class="jp.go.aist.six.oval.core.repository.morphia.DefinitionsElementAssocDAO">
        <constructor-arg ref="morphiaDatastore"/> 
    </bean> 



    <!-- ******************************************************* -->

    <bean id="ovalDatabase" 
        class="jp.go.aist.six.oval.core.repository.morphia.MongoOvalDatabase"> 
        <property name="DAO">
            <set>
                <ref bean="ovalDefinitionsDAO"/>
                <ref bean="definitionDAO"/>
                <ref bean="testDAO"/>
                <ref bean="systemObjectDAO"/>
                <ref bean="stateDAO"/>
                <ref bean="variableDAO"/>
                <ref bean="ovalSystemCharacteristicsDAO"/>
                <ref bean="ovalResultsDAO"/>

                <ref bean="definitionsElementAssocDAO"/>
            </set>
        </property>
    </bean>

<!--
    <bean id="ovalDefinitionRepository" 
        class="jp.go.aist.six.oval.core.repository.OvalDefinitionRepositoryImpl">
        <property name="database" ref="ovalDatabase"/>
    </bean>
-->


    <bean id="ovalRepository" 
        class="jp.go.aist.six.oval.core.repository.OvalRepositoryImpl">
        <property name="database" ref="ovalDatabase"/>
    </bean>


    <bean id="ovalDefinitionsGenerator" 
        class="jp.go.aist.six.oval.core.repository.morphia.OvalDefinitionsGenerator">
<!--
        <property name="datastore" ref="ovalDatabase"/>
-->
    </bean>

</beans>
