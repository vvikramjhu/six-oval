<?xml version="1.0" encoding="UTF-8"?>

<project name="six-example" basedir="..">

    <property name="lib.dir"            location="${basedir}/lib"/>

    <path id="java.lib.classpath">
        <fileset dir="${lib.dir}" includes="**/*.jar" />
    </path>

    <path id="java.compile.classpath">
        <path refid="java.lib.classpath"/>
    </path>

    <path id="java.run.classpath">
        <path refid="java.compile.classpath"/>
    </path>


    <!-- ************************************************************** -->
    <!-- *  Examples                                                  * -->
    <!-- ************************************************************** -->

    <target name="oval.example.xml-mapping" depends="">
        <java
            classname="jp.go.aist.six.test.oval.example.OvalXmlMappingExample"
            classpathref="java.run.classpath"
            fork="true"
            maxmemory="512m"
            >
        </java>
    </target>

</project>

