<jdo-conf>

    <database name="test" engine="mysql" >
        <data-source class-name="org.apache.commons.dbcp.BasicDataSource">
            <param name="driver-class-name" value="com.mysql.jdbc.Driver"/>
            <param name="url"               value="jdbc:mysql://localhost/test"/>
            <param name="max-active"        value="8"/>
            <param name="validation-query"  value="SELECT 1"/>
            <param name="username"          value="test"/>
            <param name="password"          value="test"/>
        </data-source>

        <mapping href="inherit-six-oval_castor-jdo-mapping.xml"/>
    </database>

    <transaction-demarcation mode="local">
        <transaction-manager name="local" />
    </transaction-demarcation>

</jdo-conf>

