<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
                         "http://castor.org/mapping.dtd">

<!-- /////////////////////////////////////////////////////////// -->
<!-- // Project SIX: OVAL                                     // -->
<!-- //                                                       // -->
<!-- // Castor JDO Mapping Specification                      // -->
<!-- /////////////////////////////////////////////////////////// -->

<!-- @author    Akihito Nakamura, AIST -->
<!-- @version   $Id$ -->
<!-- @oval-schema version 5 -->

<mapping>

    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- %                                                     % -->
    <!-- %  OVAL definitions                                   % -->
    <!-- %                                                     % -->
    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    
    <class name="jp.go.aist.six.oval.model.v5.definitions.OvalDefinitions"
        identity="persistentID">
        <map-to table="oval_d_definitions"/>

        <field name="persistentID" type="string">
            <sql name="PID" type="char"/>
        </field>

        <field name="generator.timestamp" type="string">
            <sql name="gen_timestamp" type="char"/>
        </field>
<!-- date
        <field name="generator.timestamp" type="date">
            <sql name="gen_timestamp" type="timestamp"/>
        </field>
-->

        <field name="generator.schemaVersion" type="string">
            <sql name="gen_schema_version" type="char"/>
        </field>

        <field name="generator.productName" type="string">
            <sql name="gen_product_name" type="char"/>
        </field>

        <field name="generator.productVersion" type="string">
            <sql name="gen_product_version" type="char"/>
        </field>

        <field name="definitionsDigest" type="string">
            <sql name="definitions_digest" type="char"/>
        </field>

        
        <!--
        NOTE:
        definitions, tests, objects, states, and variables
        are manipulated by the StoreWorker. 
        -->
    </class>



    <class name="jp.go.aist.six.oval.model.v5.definitions.DefinitionType"
        identity="persistentID">
        <map-to table="oval_d_definition"/>

        <field name="persistentID" type="string">
            <sql name="PID" type="char"/>
        </field>

        <field name="ovalID" type="string">
            <sql name="id" type="char"/>
        </field>

        <field name="ovalVersion" type="integer">
            <sql name="version" type="integer"/>
        </field>

        <field name="definitionClass" 
            type="jp.go.aist.six.oval.model.v5.common.DefinitionClassEnumeration">
            <sql name="class" type="char"/>
        </field>

        <field name="deprecated" type="boolean">
            <sql name="deprecated" type="bit"/>
        </field>

        <field name="criteria" type="string"
            set-method="xmlSetCriteria"
            get-method="xmlGetCriteria"
            >
            <sql name="criteria_xml" type="char"/>
        </field>


        <!-- // metadata // -->
        <field name="metadata.title" type="string">
            <sql name="title" type="char"/>
        </field>

        <field name="metadata.description" type="string">
            <sql name="description" type="char"/>
        </field>

        <!-- Definition : Reference = m : n -->
        <field name="metadata.reference"
            type="jp.go.aist.six.oval.model.v5.definitions.ReferenceType"
            collection="collection"
            lazy="true">
            <sql name="d_reference__PID"
                many-table="oval_assoc__d_definition__d_reference"
                many-key="d_definition__PID"/>
        </field>


        <!-- // metadata/affected // -->
        
        <field name="metadata.affected.family" 
            type="jp.go.aist.six.oval.model.v5.common.FamilyEnumeration">
            <sql name="affected_family" type="char"/>
        </field>

        <field name="metadata.affected.platform"
            type="jp.go.aist.six.oval.model.v5.definitions.Platform"
            collection="collection"
            lazy="true">
            <description>Definition : Platform = n : m</description>
            <sql name="d_platform__PID"
                many-table="oval_assoc__d_definition__d_platform"
                many-key="d_definition__PID"/>
        </field>

        <field name="metadata.affected.product"
            type="jp.go.aist.six.oval.model.v5.definitions.Product"
            collection="collection"
            lazy="true">
            <description>Definition : Product = n : m</description>
            <sql name="d_product__PID"
                many-table="oval_assoc__d_definition__d_product"
                many-key="d_definition__PID"/>
        </field>


        <!-- SIX: extended properties -->
<!--
        <field name="lastModifiedDate" type="string">
            <sql name="last_modified" type="char"/>
        </field>
-->

    </class>



    <class name="jp.go.aist.six.oval.model.v5.definitions.Platform"
        identity="persistentID">

        <cache-type type="unlimited"/>
        <map-to table="oval_d_platform"/>

        <field name="persistentID" type="string">
            <sql name="PID" type="char"/>
        </field>

        <field name="name" type="string">
            <sql name="PID" type="char" read-only="true"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.definitions.Product"
        identity="persistentID">

        <cache-type type="unlimited"/>
        <map-to table="oval_d_product"/>

        <field name="persistentID" type="string">
            <sql name="PID" type="char"/>
        </field>

        <field name="name" type="string">
            <sql name="PID" type="char" read-only="true"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.definitions.ReferenceType"
        identity="persistentID"
        key-generator="IDENTITY">
        <map-to table="oval_d_reference"/>

        <field name="persistentID" type="string">
            <sql name="PID" type="integer"/>
        </field>

        <field name="source" type="string">
            <sql name="source" type="char"/>
        </field>

        <field name="refID" type="string">
            <sql name="ref_id" type="char"/>
        </field>

        <field name="refURL" type="string">
            <sql name="ref_url" type="char"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.core.store.v5.OvalDefinitionsDefinitionAssociationEntry"
        identity="persistentID"
        key-generator="IDENTITY">

        <map-to table="oval_assoc__d_definitions__d_definition"/>

        <field name="persistentID" type="integer">
            <sql name="PID" type="integer"/>
        </field>

        <field name="antecendentPersistentID" type="string">
            <sql name="d_definitions__PID" type="char"/>
        </field>

        <field name="dependentPersistentID" type="string">
            <sql name="d_definition__PID" type="char"/>
        </field>
    </class>



</mapping>
