<mapping>

    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- %                                                     % -->
    <!-- %  #linux                                             % -->
    <!-- %                                                     % -->
    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->

    <class name="jp.go.aist.six.oval.model.v5.linux.DpkgInfoTest"
        extends="jp.go.aist.six.oval.model.v5.definitions.TestType">
        <map-to xml="dpkginfo_test"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5#linux"
            ns-prefix=""/>

        <field name="object" 
            type="jp.go.aist.six.oval.model.v5.definitions.SystemObjectRefType">
            <bind-xml name="object" node="element"/>
        </field>

        <field name="state" 
            type="jp.go.aist.six.oval.model.v5.definitions.StateRefType"
            collection="collection">
            <bind-xml name="state" node="element"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.linux.DpkgInfoObject"
        extends="jp.go.aist.six.oval.model.v5.definitions.SystemObjectType">
        <map-to xml="dpkginfo_object"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5#linux"
            ns-prefix=""/>

        <field name="name"
            type="jp.go.aist.six.oval.model.v5.definitions.EntityObjectStringType">
            <bind-xml name="name" node="element"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.linux.DpkgInfoState"
        extends="jp.go.aist.six.oval.model.v5.definitions.StateType">
        <map-to xml="dpkginfo_state"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5#linux"
            ns-prefix=""/>

        <field name="arch" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityStateStringType">
            <bind-xml name="arch" node="element"/>
        </field>
        
        <field name="name" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityStateStringType">
            <bind-xml name="name" node="element"/>
        </field>
        
        <field name="version" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityStateAnySimpleType">
            <bind-xml name="version" node="element"/>
        </field>

        <field name="release" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityStateAnySimpleType">
            <bind-xml name="release" node="element"/>
        </field>
        
        <field name="epoch" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityStateAnySimpleType">
            <bind-xml name="epoch" node="element"/>
        </field>
        
        <field name="evr" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityStateEVRStringType">
            <bind-xml name="evr" node="element"/>
        </field>
    </class>

</mapping>
