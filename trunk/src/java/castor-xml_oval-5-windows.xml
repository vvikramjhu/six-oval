<mapping>

    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- %                                                     % -->
    <!-- %  xmlns:oval-definitions-5#windows                   % -->
    <!-- %                                                     % -->
    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    
<!-- file -->    

    <class name="jp.go.aist.six.oval.model.v5.windows.FileTest"
        extends="jp.go.aist.six.oval.model.v5.definitions.TestType">
        <map-to xml="file_test"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5#windows"
            ns-prefix=""/>

        <field name="object" 
            type="jp.go.aist.six.oval.model.v5.definitions.SystemObjectRefType">
            <bind-xml name="object" node="element"/>
        </field>
        
        <field name="state" 
            type="jp.go.aist.six.oval.model.v5.definitions.StateRefType"
            collection="collection">
            <bind-xml name="state" node="element"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.windows.FileObject"
        extends="jp.go.aist.six.oval.model.v5.definitions.SystemObjectType">
        <map-to xml="file_object"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5#windows"
            ns-prefix=""/>

        <field name="behaviors" 
            type="jp.go.aist.six.oval.model.v5.windows.FileBehaviors">
            <bind-xml name="behaviors" node="element"/>
        </field>
        
        <field name="filepath" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityObjectStringType">
            <bind-xml name="filepath" node="element"/>
        </field>
        
        <field name="path" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityObjectStringType">
            <bind-xml name="path" node="element"/>
        </field>
        
        <field name="filename" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityObjectStringType">
            <bind-xml name="filename" node="element"/>
        </field>

        <field name="filter" 
            type="jp.go.aist.six.oval.model.v5.definitions.Filter"
            collection="collection">
            <bind-xml name="filter" node="element"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.windows.FileState"
        extends="jp.go.aist.six.oval.model.v5.definitions.StateType">
        <map-to xml="file_state"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5#windows"
            ns-prefix=""/>

        <field name="version" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityStateVersionType">
            <bind-xml name="version" node="element"/>
        </field>

        <field name="productName" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityStateStringType">
            <bind-xml name="product_name" node="element"/>
        </field>

        <field name="productVersion" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityStateVersionType">
            <bind-xml name="product_version" node="element"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.windows.FileBehaviors"
        extends="jp.go.aist.six.oval.model.v5.AbstractFileBehaviors">
    </class>




<!-- registry -->

    <class name="jp.go.aist.six.oval.model.v5.windows.RegistryTest"
        extends="jp.go.aist.six.oval.model.v5.definitions.TestType">
        <map-to xml="registry_test"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5#windows"
            ns-prefix=""/>

        <field name="object" 
            type="jp.go.aist.six.oval.model.v5.definitions.SystemObjectRefType">
            <bind-xml name="object" node="element"/>
        </field>
        
        <field name="state" 
            type="jp.go.aist.six.oval.model.v5.definitions.StateRefType"
            collection="collection">
            <bind-xml name="state" node="element"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.windows.RegistryObject"
        extends="jp.go.aist.six.oval.model.v5.definitions.SystemObjectType">
        <map-to xml="registry_object"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5#windows"
            ns-prefix=""/>

        <field name="behaviors" 
            type="jp.go.aist.six.oval.model.v5.windows.RegistryBehaviors">
            <bind-xml name="behaviors" node="element"/>
        </field>
        
        <field name="hive" 
            type="jp.go.aist.six.oval.model.v5.windows.EntityObjectRegistryHiveType" >
            <bind-xml name="hive" node="element"/>
        </field>

        <field name="key" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityObjectStringType">
            <bind-xml name="key" node="element"/>
        </field>
        
        <field name="name" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityObjectStringType">
            <bind-xml name="name" node="element"/>
        </field>

        <field name="filter" 
            type="jp.go.aist.six.oval.model.v5.definitions.Filter"
            collection="collection">
            <bind-xml name="filter" node="element"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.windows.RegistryState"
        extends="jp.go.aist.six.oval.model.v5.definitions.StateType">
        <map-to xml="registry_state"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5#windows"
            ns-prefix=""/>

        <field name="hive" 
            type="jp.go.aist.six.oval.model.v5.windows.EntityStateRegistryHiveType">
            <bind-xml name="hive" node="element"/>
        </field>

        <field name="key" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityStateStringType">
            <bind-xml name="key" node="element"/>
        </field>

        <field name="name" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityStateStringType">
            <bind-xml name="name" node="element"/>
        </field>

        <field name="type" 
            type="jp.go.aist.six.oval.model.v5.windows.EntityStateRegistryTypeType">
            <bind-xml name="type" node="element"/>
        </field>

        <field name="value" 
            type="jp.go.aist.six.oval.model.v5.definitions.EntityStateAnySimpleType">
            <bind-xml name="value" node="element"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.windows.RegistryBehaviors"
        extends="jp.go.aist.six.oval.model.v5.AbstractBehaviors">
    </class>



<!-- entity -->

    <class name="jp.go.aist.six.oval.model.v5.windows.EntityObjectRegistryHiveType"
        extends="jp.go.aist.six.oval.model.v5.definitions.EntityObjectStringType">
    </class>


</mapping>
