<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc" 
    xsi:schemaLocation="
      http://www.springframework.org/schema/beans 
      http://www.springframework.org/schema/beans/spring-beans.xsd
      http://www.springframework.org/schema/context 
      http://www.springframework.org/schema/context/spring-context.xsd
      http://www.springframework.org/schema/mvc
      http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd"
      >


    <!-- external configurations -->
    <context:property-placeholder location="classpath:six-oval.properties"/>



    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- %  Datastore                                          % -->
    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->

    <bean id="mongo" 
        class="com.mongodb.Mongo">
        <constructor-arg type="java.lang.String" value="${six.oval.repository.datastore.host}"/>
        <constructor-arg type="int" value="${six.oval.repository.datastore.port}"/>
    </bean> 


    <bean id="morphia" 
        class="jp.go.aist.six.oval.core.repository.mongodb.MorphiaFactory" 
        factory-method="create"> 
        <constructor-arg>
            <set>
                <!-- value>#{ T(jp.go.aist.six.oval.model.definitions.DefinitionType) }</value -->
            </set>
        </constructor-arg>
        <constructor-arg>
            <set>
                <value>#{ T(jp.go.aist.six.oval.core.repository.mongodb.OvalConverter) }</value>
            </set>
        </constructor-arg>
    </bean>


    <bean id="database" 
        factory-bean="morphia" 
        factory-method="createDatastore"> 
        <constructor-arg ref="mongo"/> 
        <constructor-arg value="${six.oval.repository.datastore.name}"/> <!-- String: database name -->
        <constructor-arg value="${six.oval.repository.datastore.username}"/> <!-- String: user name -->
        <constructor-arg value="${six.oval.repository.datastore.password}"/> <!-- String: user password -->
    </bean>


    <bean id="ovalDefinitionsDAO" 
        class="jp.go.aist.six.oval.core.repository.mongodb.OvalDefinitionsDAO">
        <constructor-arg ref="database"/> 
    </bean> 

    <bean id="definitionDAO" 
        class="jp.go.aist.six.oval.core.repository.mongodb.DefinitionDAO">
        <constructor-arg ref="database"/> 
    </bean> 

    <bean id="testDAO" 
        class="jp.go.aist.six.oval.core.repository.mongodb.TestDAO">
        <constructor-arg ref="database"/> 
    </bean> 

    <bean id="systemObjectDAO" 
        class="jp.go.aist.six.oval.core.repository.mongodb.SystemObjectDAO">
        <constructor-arg ref="database"/> 
    </bean> 

    <bean id="stateDAO" 
        class="jp.go.aist.six.oval.core.repository.mongodb.StateDAO">
        <constructor-arg ref="database"/> 
    </bean> 

    <bean id="variableDAO" 
        class="jp.go.aist.six.oval.core.repository.mongodb.VariableDAO">
        <constructor-arg ref="database"/> 
    </bean> 


    <bean id="ovalSystemCharacteristicsDAO" 
        class="jp.go.aist.six.oval.core.repository.mongodb.OvalSystemCharacteristicsDAO">
        <constructor-arg ref="database"/> 
    </bean> 

    <bean id="ovalResultsDAO" 
        class="jp.go.aist.six.oval.core.repository.mongodb.OvalResultsDAO">
        <constructor-arg ref="database"/> 
    </bean> 


    <bean id="datastore" 
        class="jp.go.aist.six.oval.core.repository.mongodb.MongoDatastore"> 
        <property name="DAO">
            <set>
                <ref bean="ovalDefinitionsDAO"/>
                <ref bean="definitionDAO"/>
                <ref bean="testDAO"/>
                <ref bean="systemObjectDAO"/>
                <ref bean="stateDAO"/>
                <ref bean="variableDAO"/>
                <ref bean="ovalSystemCharacteristicsDAO"/>
                <ref bean="ovalResultsDAO"/>
            </set>
        </property>
    </bean>


    <bean id="ovalRepository" 
        class="jp.go.aist.six.oval.core.repository.mongodb.MongoOvalRepository"> 
        <property name="datastore" ref="datastore"/>
    </bean>



    <!-- ******************************************************* -->

    <bean id="mongoOvalDatastore" 
        class="jp.go.aist.six.oval.core.repository.mongodb.MongoOvalDatastore"> 
        <property name="DAO">
            <set>
                <ref bean="ovalDefinitionsDAO"/>
                <ref bean="definitionDAO"/>
                <ref bean="testDAO"/>
                <ref bean="systemObjectDAO"/>
                <ref bean="stateDAO"/>
                <ref bean="variableDAO"/>
                <ref bean="ovalSystemCharacteristicsDAO"/>
                <ref bean="ovalResultsDAO"/>
            </set>
        </property>
    </bean>


    <bean id="ovalDefinitionRepository" 
        class="jp.go.aist.six.oval.core.repository.mongodb.MongoOvalDefinitionRepository">
        <property name="datastore" ref="mongoOvalDatastore"/>
    </bean>


    <bean id="ovalResultRepository" 
        class="jp.go.aist.six.oval.core.repository.mongodb.MongoOvalDefinitionResultRepository">
        <property name="datastore" ref="mongoOvalDatastore"/>
    </bean>


</beans>
