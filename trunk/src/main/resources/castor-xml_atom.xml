<mapping>

    <class name="jp.go.aist.six.oval.core.ws.AtomFeed">
        <map-to xml="feed"
            ns-uri="http://www.w3.org/2005/Atom"
            ns-prefix=""/>

        <field name="id" type="string">
            <bind-xml name="id" node="element"/>
        </field>

        <field name="title" type="string">
            <bind-xml name="title" node="element"/>
        </field>

        <field name="updated" type="date">
            <bind-xml name="updated" node="element"/>
        </field>

        <field name="link" 
            type="jp.go.aist.six.oval.core.ws.AtomLink"
            collection="collection"
            set-method="addLink"
            get-method="iterateLink">
            <bind-xml name="link" node="element"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.core.ws.AtomLink">
        <map-to xml="link"
            ns-uri="http://www.w3.org/2005/Atom"
            ns-prefix=""/>

        <field name="href" type="string">
            <bind-xml name="href" node="attribute"/>
        </field>

        <field name="rel" type="string">
            <bind-xml name="rel" node="attribute"/>
        </field>

        <field name="type" type="string">
            <bind-xml name="type" node="attribute"/>
        </field>

        <field name="title" type="string">
            <bind-xml name="title" node="attribute"/>
        </field>
    </class>

</mapping>

