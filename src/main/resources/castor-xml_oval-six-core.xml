<!-- @author    Akihito Nakamura, AIST -->
<!-- @version   $Id$ -->

<mapping>

    <class name="jp.go.aist.six.oval.repository.QueryResults">
        <map-to xml="query_results"
            ns-uri="http://aist.go.jp/six/oval/"
            />
<!--
            xml="opensearch_response"
            ns-uri="http://a9.com/-/spec/opensearch/1.1/"
            ns-prefix="opensearch"
-->

        <field name="totalResults" type="long">
            <bind-xml name="totalResults" node="element"
                xmlns="http://a9.com/-/spec/opensearch/1.1/"
                />
        </field>

        <field name="startIndex" type="long">
            <bind-xml name="startIndex" node="element"
                xmlns="http://a9.com/-/spec/opensearch/1.1/"
                />
        </field>

        <field name="itemsPerPage" type="long">
            <bind-xml name="itemsPerPage" node="element"
                xmlns="http://a9.com/-/spec/opensearch/1.1/"
                />
        </field>

        <field name="results" 
            type="jp.go.aist.six.oval.repository.QueryResultsElements"
            container="false"
            >
            <bind-xml name="results" node="element"/>
        </field>
<!--
        <field name="elements" 
            type="jp.go.aist.six.oval.model.OvalObject"
            collection="collection">
            <bind-xml auto-naming="deriveByClass" node="element" location="elements"/>
        </field>
-->
    </class>



    <class name="jp.go.aist.six.oval.repository.QueryResultsElements">
        <map-to xml="elements"
            />

        <field name="elements" 
            type="jp.go.aist.six.oval.model.OvalObject"
            collection="collection">
            <bind-xml auto-naming="deriveByClass" node="element"/>
        </field>
    </class>




<!-- *********************************************************** -->

    <class name="jp.go.aist.six.oval.repository.QueryResult">
        <map-to xml="query_result"
            ns-uri="http://aist.go.jp/six/oval/"
            ns-prefix=""/>

        <field name="timestamp" type="date">
            <bind-xml name="timestamp" node="element"/>
        </field>

<!--
        <field name="link" 
            type="jp.go.aist.six.oval.core.ws.AtomLink"
            collection="collection"
            set-method="addLink"
            get-method="iterateLink">
            <bind-xml name="link" node="element"/>
        </field>
-->

        <field name="metadata" 
            type="jp.go.aist.six.oval.repository.QueryResultMetadata"
            container="true"
            >
            <bind-xml name="opensearch" node="element"/>
        </field>

        <field name="elements" 
            type="jp.go.aist.six.oval.repository.QueryResultElements"
            container="false"
            >
            <bind-xml name="elements" node="element"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.repository.QueryResultElements">
        <map-to xml="elements"
            />

        <field name="elements" 
            type="jp.go.aist.six.oval.model.OvalObject"
            collection="collection">
            <bind-xml auto-naming="deriveByClass" node="element"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.repository.QueryResultMetadata">
        <map-to xml="query_result_metadata"
            ns-uri="http://a9.com/-/spec/opensearch/1.1/"
            ns-prefix="opensearch"/>
<!--
            xml="opensearch_response"
-->

        <field name="totalResults" type="long">
            <bind-xml name="totalResults" node="element"/>
        </field>

        <field name="startIndex" type="long">
            <bind-xml name="startIndex" node="element"/>
        </field>

        <field name="itemsPerPage" type="long">
            <bind-xml name="itemsPerPage" node="element"/>
        </field>
    </class>




    <class name="jp.go.aist.six.oval.core.ws.AtomLink">
        <map-to xml="link"
            ns-uri="http://www.w3.org/2005/Atom"
            ns-prefix="atom"/>

        <field name="href" type="string">
            <bind-xml name="href" node="attribute"/>
        </field>

        <field name="rel" type="string">
            <bind-xml name="rel" node="attribute"/>
        </field>

        <field name="type" type="string">
            <bind-xml name="type" node="attribute"/>
        </field>

        <field name="title" type="string">
            <bind-xml name="title" node="attribute"/>
        </field>
    </class>




</mapping>

