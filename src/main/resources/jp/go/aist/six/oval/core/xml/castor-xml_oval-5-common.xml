<!-- @author    Akihito Nakamura, AIST -->
<!-- @version   $Id$ -->

<mapping>

    <class name ="jp.go.aist.six.oval.model.common.OvalId"
        extends="jp.go.aist.six.oval.model.OvalObject"
        verify-constructable="false">

        <map-to xml="oval-id"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-common-5"
            ns-prefix=""/>

        <field name="value" type="string"
            get-method="value"
            set-method="%1">
            <bind-xml name="value" node="attribute"/>

<!-- NOTE: Castor restriction.
Constructor arguments only valid for attribute mapped fields!!!
            <bind-xml node="text"/>
-->
        </field>
    </class>


    <class name="jp.go.aist.six.oval.model.common.OvalIdContainer">
        <map-to xml="oval-id-list"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-common-5"
            ns-prefix=""/>


        <field name="id" 
            type="jp.go.aist.six.oval.model.common.OvalId"
            collection="collection">
            <bind-xml name="oval-id" node="element"/>
        </field>
    </class>





    <class name="jp.go.aist.six.oval.model.common.AbstractBehaviors"
        verify-constructable="false">

        <field name="maxDepth" type="integer">
            <bind-xml name="max_depth" node="attribute"/>
        </field>

        <field name="recurseDirection" 
            type="string"
            handler="jp.go.aist.six.oval.core.xml.common.RecurseDirectionEnumerationHandler">
            <bind-xml name="recurse_direction" node="attribute"/>
        </field>
<!--
        <field name="recurseDirection"
            type="jp.go.aist.six.oval.model.RecurseDirectionEnumeration">
            <bind-xml name="recurse_direction" node="attribute"/>
        </field>
-->
    </class>



    <class name="jp.go.aist.six.oval.model.common.AbstractFileBehaviors"
        extends="jp.go.aist.six.oval.model.common.AbstractBehaviors"
        verify-constructable="false">

        <field name="recurseFileSystem"
            type="jp.go.aist.six.oval.model.common.RecurseFileSystemEnumeration">
            <bind-xml name="recurse_file_system" node="attribute"/>
        </field>
    </class>


    <class name="jp.go.aist.six.oval.model.common.AbstractRecurseFileBehaviors"
        extends="jp.go.aist.six.oval.model.common.AbstractFileBehaviors">

        <field name="recurse" type="string">
            <bind-xml name="recurse" node="attribute"/>
        </field>
    </class>



    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- %                                                     % -->
    <!-- %  xmlns:oval-common-5                                % -->
    <!-- %                                                     % -->
    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->

    <class name="jp.go.aist.six.oval.model.common.GeneratorType">
        <map-to 
            ns-uri="http://oval.mitre.org/XMLSchema/oval-common-5"
            ns-prefix=""/>

        <field name="productName" type="string">
            <bind-xml name="product_name" node="element"/>
        </field>

        <field name="productVersion" type="string">
            <bind-xml name="product_version" node="element"/>
        </field>

        <field name="schemaVersion" type="string">
            <bind-xml name="schema_version" node="element"/>
        </field>

        <field name="timestamp" type="string">
            <bind-xml name="timestamp" node="element"/>
        </field>
<!-- date
        <field name="timestamp" type="date">
            <bind-xml name="timestamp" node="element"/>
        </field>
-->

        <field name="additionalInformation" 
            type="jp.go.aist.six.oval.model.common.GeneratorInformation"
            collection="collection">
            <bind-xml auto-naming="deriveByClass" node="element"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.common.MessageType">
<!--
        <map-to 
            ns-uri="http://oval.mitre.org/XMLSchema/oval-common-5"
            ns-prefix=""/>
-->

        <field name="content" type="string">
            <bind-xml node="text"/>
        </field>

        <field name="level"  
            type="string"
            handler="jp.go.aist.six.oval.core.xml.common.MessageLevelEnumerationHandler">
            <bind-xml name="level" node="attribute"/>
        </field>
    </class>

</mapping>

