<!-- /////////////////////////////////////////////////////////// -->

<!-- @author    Akihito Nakamura, AIST -->
<!-- @version   $Id$ -->

<mapping>

    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- %                                                     % -->
    <!-- %  xmlns:oval-system-characteristics-5                % -->
    <!-- %                                                     % -->
    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->

    <class name="jp.go.aist.six.oval.model.v5.sc.OvalSystemCharacteristics"
        extends="jp.go.aist.six.oval.model.v5.OvalDocument">
    
        <map-to xml="oval_system_characteristics"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-system-characteristics-5"
            ns-prefix=""/>

        <field name="generator" 
            type="jp.go.aist.six.oval.model.v5.common.GeneratorType">
            <bind-xml name="generator" node="element"/>
        </field>

        <field name="systemInfo" 
            type="jp.go.aist.six.oval.model.v5.sc.SystemInfoType"
            required="true">
            <bind-xml name="system_info" node="element"/>
        </field>

        <field name="collectedObjects" 
            type="jp.go.aist.six.oval.model.v5.sc.CollectedSystemObjectsType">
            <bind-xml name="collected_objects" node="element"/>
        </field>

        <field name="systemData" 
            type="jp.go.aist.six.oval.model.v5.sc.SystemDataType">
            <bind-xml name="system_data" node="element"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.sc.SystemInfoType">
        <map-to 
            ns-uri="http://oval.mitre.org/XMLSchema/oval-system-characteristics-5"/>

        <field name="osName" type="string"
            required="true">
            <bind-xml name="os_name" node="element"/>
        </field>

        <field name="osVersion" type="string"
            required="true">
            <bind-xml name="os_version" node="element"/>
        </field>

        <field name="architecture" type="string"
            required="true">
            <bind-xml name="architecture" node="element"/>
        </field>

        <field name="primaryHostName" type="string"
            required="true">
            <bind-xml name="primary_host_name" node="element"/>
        </field>

        <field name="interfaces" 
            type="jp.go.aist.six.oval.model.v5.sc.NetworkInterfacesType">
            <bind-xml name="interfaces" node="element"/> 
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.sc.NetworkInterfacesType">
        <map-to 
            ns-uri="http://oval.mitre.org/XMLSchema/oval-system-characteristics-5"/>

        <field name="interface" 
            type="jp.go.aist.six.oval.model.v5.sc.NetworkInterfaceType"
            collection="collection">
            <bind-xml name="interface" node="element"/>
        </field>
    </class>



    <class name ="jp.go.aist.six.oval.model.v5.sc.NetworkInterfaceType">
        <map-to 
            ns-uri="http://oval.mitre.org/XMLSchema/oval-system-characteristics-5"/>

        <field name="interfaceName" type="string"
            required="true">
            <bind-xml name="interface_name" node="element"/>
        </field>

        <field name="ipAddress" 
            type="jp.go.aist.six.oval.model.v5.sc.EntityItemIPAddressStringType"
            required="true">
            <bind-xml name="ip_address" node="element"/>
        </field>

        <field name="macAddress" type="string"
            required="true">
            <bind-xml name="mac_address" node="element"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.sc.CollectedSystemObjectsType">
        <map-to 
            ns-uri="http://oval.mitre.org/XMLSchema/oval-system-characteristics-5"/>

        <field name="object" 
            type="jp.go.aist.six.oval.model.v5.sc.SystemObjectType"
            collection="collection">
            <bind-xml name="object" node="element"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.sc.SystemObjectType"
        extends="jp.go.aist.six.oval.model.v5.OvalElement">
        <map-to 
            ns-uri="http://oval.mitre.org/XMLSchema/oval-system-characteristics-5"/>

        <field name="message" 
            type="jp.go.aist.six.oval.model.v5.common.MessageType"
            collection="collection">
            <bind-xml name="message" node="element"/>
        </field>
<!--
        <field name="message" type="string">
            <bind-xml name="message" node="element"/>
        </field>
-->

        <field name="variableValue" 
            type="jp.go.aist.six.oval.model.v5.sc.VariableValueType"
            collection="collection">
            <bind-xml name="variable_value" node="element"/>
        </field>

        <field name="reference" 
            type="jp.go.aist.six.oval.model.v5.sc.ReferenceType"
            collection="collection">
            <bind-xml name="reference" node="element"/>
        </field>

        <field name="variableInstance" type="int">
            <bind-xml name="variable_instance" node="attribute"/>
        </field>

        <field name="comment" type="string">
            <bind-xml name="comment" node="attribute"/>
        </field>

        <field name="flag"  
            type="string"
            handler="jp.go.aist.six.oval.core.xml.v5.sc.FlagEnumerationHandler">
            <!-- type="jp.go.aist.six.oval.model.v5.sc.FlagEnumeration" -->
            <bind-xml name="flag" node="attribute"/>
        </field>
    </class>



    <class name ="jp.go.aist.six.oval.model.v5.sc.VariableValueType">
        <map-to 
            ns-uri="http://oval.mitre.org/XMLSchema/oval-system-characteristics-5"/>

        <field name="variableID" type="string">
            <bind-xml name="variable_id" node="attribute"/>
        </field>

        <field name="content" type="string">
            <bind-xml node="text"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.sc.ReferenceType">
        <map-to 
            ns-uri="http://oval.mitre.org/XMLSchema/oval-system-characteristics-5"/>

        <field name="itemRef" type="int">
            <bind-xml name="item_ref" node="attribute"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.sc.SystemDataType">
<!--
If we have this ns-uri, child elements have the same namespace,
not the family-specific one.
        <map-to 
            ns-uri="http://oval.mitre.org/XMLSchema/oval-system-characteristics-5"/>
-->

        <field name="item" 
            type="jp.go.aist.six.oval.model.v5.sc.ItemType"
            collection="collection">
            <bind-xml auto-naming="deriveByClass" node="element"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.sc.ItemType">
        <field name="message" 
            type="jp.go.aist.six.oval.model.v5.common.MessageType"
            collection="collection">
            <bind-xml name="message" node="element"/>
            <!--
                xmlns="http://oval.mitre.org/XMLSchema/oval-system-characteristics-5"
            -->
        </field>

        <field name="ID" type="int">
            <bind-xml name="id" node="attribute"/>
        </field>

        <field name="status" 
            type="string"
            handler="jp.go.aist.six.oval.core.xml.v5.sc.StatusEnumerationHandler">
            <!-- type="jp.go.aist.six.oval.model.v5.sc.StatusEnumeration" -->
            <bind-xml name="status" node="attribute"/>
        </field>
    </class>



<!-- entity -->

    <class name="jp.go.aist.six.oval.model.v5.sc.EntityAttributeGroup"
        verify-constructable="false">

        <field name="datatype" 
            type="string"
            handler="jp.go.aist.six.oval.core.xml.v5.common.DatatypeEnumerationHandler">
            <!-- type="jp.go.aist.six.oval.model.v5.common.DatatypeEnumeration" -->
            <bind-xml name="datatype" node="attribute"/>
        </field>

        <field name="mask" type="boolean">
            <bind-xml name="mask" node="attribute"/>
        </field>

        <field name="status" 
            type="string"
            handler="jp.go.aist.six.oval.core.xml.v5.sc.StatusEnumerationHandler">
            <!-- type="jp.go.aist.six.oval.model.v5.sc.StatusEnumeration" -->
            <bind-xml name="status" node="attribute"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.sc.EntityItemSimpleBaseType"
        extends="jp.go.aist.six.oval.model.v5.sc.EntityAttributeGroup"
        verify-constructable="false">

        <field name="content" type="string">
            <bind-xml node="text"/>
        </field>
    </class>



    <class name="jp.go.aist.six.oval.model.v5.sc.EntityItemIPAddressStringType"
        extends="jp.go.aist.six.oval.model.v5.sc.EntityItemSimpleBaseType">
    </class>



    <class name="jp.go.aist.six.oval.model.v5.sc.EntityItemAnySimpleType"
        extends="jp.go.aist.six.oval.model.v5.sc.EntityItemSimpleBaseType">
    </class>



    <class name="jp.go.aist.six.oval.model.v5.sc.EntityItemIntType"
        extends="jp.go.aist.six.oval.model.v5.sc.EntityItemSimpleBaseType">
    </class>



    <class name="jp.go.aist.six.oval.model.v5.sc.EntityItemStringType"
        extends="jp.go.aist.six.oval.model.v5.sc.EntityItemSimpleBaseType">
    </class>



    <class name="jp.go.aist.six.oval.model.v5.sc.EntityItemVersionType"
        extends="jp.go.aist.six.oval.model.v5.sc.EntityItemSimpleBaseType">
    </class>



    <class name="jp.go.aist.six.oval.model.v5.sc.EntityItemEVRStringType"
        extends="jp.go.aist.six.oval.model.v5.sc.EntityItemSimpleBaseType">
    </class>


</mapping>

