<?xml version="1.0" encoding="UTF-8"?>

<!-- ====================================================================== -->
<!-- Ant build file (http://ant.apache.org/) for Ant 1.6.2 or above.        -->
<!-- ====================================================================== -->

<project name="six-oval" default="package" basedir=".">

    <!-- ====================================================================== -->
    <!-- Import maven-build.xml into the current project                        -->
	<!-- ====================================================================== -->

    <import file="maven-build.xml"/>
  

    <!-- ************************************************************** -->
    <!-- *  OVAL documents installation                               * -->
    <!-- ************************************************************** -->

	<target name="oval.install-doc">
        <record name="build.log" loglevel="verbose" />
        <java
            classname="jp.go.aist.six.oval.core.repository.OvalDocumentInstaller"
            fork="true"
            maxmemory="512m"
            >
            <arg value="src/test/resources/data/20130313/20130313_mitre_vuln_macos.xml"/>
            <arg value="src/test/resources/data/20130313/20130313_mitre_vuln_unix.xml"/>
            <arg value="src/test/resources/data/20130313/20130313_mitre_vuln_windows.xml"/>
            <arg value="src/test/resources/data/20130313/20130313_com.redhat.rhsa-all.xml"/>

<!--
            <arg value="src/test/resources/data/netsap2013/20130313_mitre_vuln_macos.xml"/>
            <arg value="src/test/resources/data/netsap2013/20130313_mitre_vuln_unix.xml"/>
            <arg value="src/test/resources/data/netsap2013/20130313_mitre_vuln_windows.xml"/>

            <arg value="src/test/resources/data/netsap2013/20130313_com.redhat.rhsa-all.xml"/>
-->

<!-- includes Cisco PIXOS and IOS
        	<arg value="src/test/resources/data/netsap2013/20130313_mitre_vuln.xml"/>
-->
            <classpath>
                <path refid="build.classpath"/>
                <pathelement location="${maven.build.outputDir}"/>
                <pathelement location="${maven.build.resourceDir.0}"/>
                <pathelement location="${maven.build.testResourceDir.0}"/>
            </classpath>
        </java>
    </target>


	
	<!-- ====================================================================== -->
    <!-- Help target                                                            -->
    <!-- ====================================================================== -->

    <target name="help">
        <echo message="Please run: $ant -projecthelp"/>
    </target>

</project>
